                                <input id="rutaImagen" type="file" class="form-control flexa-standard-medium d-none" accept="image/png" v-on:change="selectedImage($event)">
                                <div :class="
                                             {
                                               'card-body': true,
                                               'd-flex': true,
                                               'flex-column': true,
                                               'align-items-center': true,
                                               'pe-none': processingSavingProduct
                                             }
